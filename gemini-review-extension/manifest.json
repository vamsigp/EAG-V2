{
  "manifest_version": 3,
  "name": "Gemini Code Review Extension",
  "description": "Reviews GitHub code files with Gemini Flash 2.0, rendered beautifully.",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/blob/*"],
      "js": ["marked.min.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}