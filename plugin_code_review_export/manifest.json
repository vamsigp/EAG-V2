{
  "manifest_version": 3,
  "name": "Gemini Code Review Extension (Tabs, Export, Parallel)",
  "description": "Multi-tab Gemini reviews for GitHub source files, with export and resizing.",
  "version": "1.5",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://github.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*/blob/*"],
      "js": ["marked.min.js", "content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}